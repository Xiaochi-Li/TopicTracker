<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/setting_title">

    <ListPreference
        android:key="@string/number_setting_key"
        android:title="Number of news"
        android:entries="@array/number_setting_options"
        android:entryValues="@array/number_setting_options_Alias"
        />
    <EditTextPreference
        android:defaultValue="@string/settings_search_word_default"
        android:inputType="text"
        android:key="@string/settings_search_word_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_word_label"/>

</PreferenceScreen>